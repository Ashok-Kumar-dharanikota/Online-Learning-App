                android:layout_below="@id/image"
                android:layout_marginLeft="10dp"
                android:layout_margin="20dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="See all"          
                android:textColor="#81000000"/>
  
