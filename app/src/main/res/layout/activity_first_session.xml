<TextView
                            android:id="@+id/f_title"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="20dp"
                            android:layout_width="match_parent"
                            android:text="1st Session of 12 WYP"
                            android:textColor="#000000"
                            android:textSize="27dp"
                            android:textStyle="bold"/>
                        
                        <TextView
                            android:id="@+id/about"
                            android:layout_alignParentLeft="true"
                            android:layout_below="@id/f_title"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_width="wrap_content"
                            android:text="In 1st session we will going to\ncover the theoritical concepts of\nProgramming"
                            android:textColor="#808080"/>
                        
                        <TextView
                            android:id="@+id/time"
                            android:layout_below="@id/about"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="15dp"
                            android:layout_marginLeft="17dp"
                            android:layout_width="wrap_content"
                            android:text="Scheduled on: 01/04/2022"
                            android:textColor="#0000FF"
                            android:textStyle="bold"/> 
                            
