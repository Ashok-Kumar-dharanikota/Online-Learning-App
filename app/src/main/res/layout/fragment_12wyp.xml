<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
    
    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"
        android:orientation="vertical">
        
        <RelativeLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent">
            
            <TextView
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                style="@style/viewParent.headerText.NoMode"
                android:layout_marginLeft="20dp"
                android:text="12 WYP\nofficial"
                android:textColor="@color/darkTextColor"/>
            
            <ImageView
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_height="wrap_content"
                android:layout_marginRight="18dp"
                android:layout_width="250dp"
                android:src="@mipmap/banner_12wyp"/>
            
        
        </RelativeLayout>
        
        <androidx.cardview.widget.CardView
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:padding="8dp"
            app:cardCornerRadius="30dp"
            app:cardElevation="30dp">
            
            <LinearLayout
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:orientation="vertical">
                
                <androidx.cardview.widget.CardView
                    android:id="@+id/session1_c"
                    android:layout_height="160dp"
                    android:layout_margin="5dp"
                    android:foreground="?android:attr/selectableItemBackground"
					android:clickable="true"
                    android:layout_width="match_parent"
                    android:padding="8dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="20dp"
                    android:layout_marginTop="10dp">
                    
                    <RelativeLayout
                        android:layout_height="match_parent"
                        android:layout_width="match_parent">
                        
                        <TextView
                            android:id="@+id/title1"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="20dp"
                            android:layout_width="wrap_content"
                            android:text="1st Session of 12 WYP"
                            android:textColor="#000000"
                            android:textSize="18dp"
                            android:textStyle="bold"/>
                        
                        <TextView
                            android:layout_alignParentLeft="true"
                            android:layout_centerInParent="true"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_width="wrap_content"
                            android:text="In 1st session we will going to\ncover the theoritical concepts of\nProgramming"
                            android:textColor="#808080"/>
                        
                        <TextView
                            android:layout_alignParentBottom="true"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="15dp"
                            android:layout_marginLeft="20dp"
                            android:layout_width="wrap_content"
                            android:text="Scheduled on: 01/04/2022"
                            android:textColor="#0000FF"
                            android:textStyle="bold"/>
                        
                        <ImageView
                            android:layout_alignParentRight="true"
                            android:layout_height="wrap_content"
                            android:layout_width="150dp"
                            android:src="@mipmap/first_12wyp"/>
                        
                    
                    </RelativeLayout>
                    
                
                </androidx.cardview.widget.CardView>
                
                <androidx.cardview.widget.CardView
                    android:id="@+id/session2_c"
                    android:layout_height="160dp"
                    android:layout_margin="5dp"
                    android:foreground="?android:attr/selectableItemBackground"
					android:clickable="true"
                    android:layout_width="match_parent"
                    android:padding="8dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="20dp"
                    android:layout_marginTop="10dp">
                    
                    <RelativeLayout
                        android:layout_height="match_parent"
                        android:layout_width="match_parent">
                        
                        <TextView
                            android:id="@+id/title2"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="20dp"
                            android:layout_width="wrap_content"
                            android:text="2nd Session of 12 WYP"
                            android:textColor="#000000"
                            android:textSize="18dp"
                            android:textStyle="bold"/>
                        
                        <TextView
                            android:layout_alignParentLeft="true"
                            android:layout_centerInParent="true"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_width="wrap_content"
                            android:text="In 2nd session we will going to\n learn the concepts of\nProgramming in practical."
                            android:textColor="#808080"/>
                        
                        <TextView
                            android:layout_alignParentBottom="true"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="15dp"
                            android:layout_marginLeft="20dp"
                            android:layout_width="wrap_content"
                            android:text="Scheduled on: 01/05/2022"
                            android:textColor="#0000FF"
                            android:textStyle="bold"/>
                        
                        <ImageView
                            android:layout_alignParentRight="true"
                            android:layout_height="wrap_content"
                            android:layout_width="150dp"
                            android:src="@mipmap/second_12wyp"/>
                        
                    
                    </RelativeLayout>
                    
                
                </androidx.cardview.widget.CardView>
                
                <androidx.cardview.widget.CardView
                    android:id="@+id/session3_c"
                    android:layout_height="160dp"
                    android:layout_margin="5dp"
                    android:foreground="?android:attr/selectableItemBackground"
					android:clickable="true"
                    android:layout_width="match_parent"
                    android:padding="8dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="20dp"
                    android:layout_marginTop="10dp">
                    
                    <RelativeLayout
                        android:layout_height="match_parent"
                        android:layout_width="match_parent">
                        
                        <TextView
                            android:id="@+id/title3"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="20dp"
                            android:layout_width="wrap_content"
                            android:text="3rd Session of 12 WYP"
                            android:textColor="#000000"
                            android:textSize="18dp"
                            android:textStyle="bold"/>
                        
                        <TextView
                            android:layout_alignParentLeft="true"
                            android:layout_centerInParent="true"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_width="wrap_content"
                            android:text="In 3rd session we will going to\n implement the both\ntheoritical and practical\nby building a project."
                            android:textColor="#808080"/>
                        
                        <TextView
                            android:layout_alignParentBottom="true"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="15dp"
                            android:layout_marginLeft="20dp"
                            android:layout_width="wrap_content"
                            android:text="Scheduled on: 01/06/2022"
                            android:textColor="#0000FF"
                            android:textStyle="bold"/>
                        
                        <ImageView
                            android:layout_alignParentRight="true"
                            android:layout_height="wrap_content"
                            android:layout_width="150dp"
                            android:src="@mipmap/third_12wyp"/>
                        
                    
                    </RelativeLayout>
                    
                
                </androidx.cardview.widget.CardView>
                
            
            </LinearLayout>
            
        
        </androidx.cardview.widget.CardView>
        
    
    </LinearLayout>
    

</RelativeLayout>









